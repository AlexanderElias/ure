{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "deno.ns",
            "deno.unstable"
        ]
    },
    "lint": {
        "files": {
            "include": [
                "server.ts",
                "deploy.ts",
                "watch.ts",
                "test.ts",
                "docs.ts"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "server.ts",
                "deploy.ts",
                "watch.ts",
                "test.ts",
                "docs.ts"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 500,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "docs": "deno run -A docs.ts",
        "b": "deno run -A bundle.ts",
        "d": "deno run -A deploy.ts",
        "t": "deno test -A test.ts",
        "w": "deno run --unstable -A watch.ts"
    }
}