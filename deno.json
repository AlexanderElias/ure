{
    "compilerOptions": {
        "allowJs": true
    },
    "lint": {
        "files": {
            "include": [
                "./util"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "./util"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 500,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "docs": "deno run -A util/docs.ts",
        "b": "deno run -A util/bundle.ts",
        "d": "deno run -A util/deploy.ts",
        "t": "deno test -A util/test.ts",
        "w": "deno run -A util/watch.ts",
        "i": "deno run --allow-net --allow-read https://deno.land/std@0.180.0/http/file_server.ts ideas/. --port 8000"
    }
}