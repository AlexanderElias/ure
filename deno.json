{
    "lint": {
        "include": [
            "scripts"
        ]
    },
    "fmt": {
        "include": [
            "scripts"
        ],
        "options": {
            "useTabs": false,
            "lineWidth": 500,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "d": "deno run -A scripts/deploy.ts",
        "t": "deno test -A scripts/test.ts",
        "w": "deno run -A scripts/watch.ts",
        "tv": "deno run -A scripts/virtual-test.ts"
    }
}