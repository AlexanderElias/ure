{
    "compilerOptions": {
        "allowJs": true
    },
    "lint": {
        "files": {
            "include": [
                "utl"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "utl"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 500,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "d": "deno run -A utl/deploy.ts",
        "t": "deno test -A utl/test.ts",
        "w": "deno run -A utl/watch.ts"
    }
}